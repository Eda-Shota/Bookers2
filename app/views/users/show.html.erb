<div class="container px-5 px-sm-0">
  <div class="row">

<%= render 'books/left_item', user: @user %>
  <div class="col-md-8 offset-md-1">
    <h2>Books</h2>
    
      <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3">
        </th></tr>
    </thead>

    <tbody>
    <% @show_user.books.each do |book| %>
      <tr>
        <td>
          <%= link_to(user_path(@show_user.id)) do %>
          <%= image_tag @show_user.get_profile_image(100,100) %>
          <% end %>
        </td>
        <td>
          <%= link_to(book_path(book.id)) do %>
          <%= book.title %>
          <% end %>
        </td>
        <td><%= book.body %></td>
      </tr>
    <% end %>

  </tbody>
</table>

   </div>
  </div>
</div>
