<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
        <% if @user.errors.any? %>
    <% if @user.errors.count == 1 %>
    <h3><%= @user.errors.count %> error prohibited this obj from being saved:</h3>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
      <% else %>
    <h3><%= @user.errors.count %> errors prohibited this obj from being saved:</h3>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end  %>
  <% end %>
  <%= form_with model: @user do |f| %>
  <div>
  <%= f.label :Name %><br>
  <%= f.text_field :name, autofocus: true, class: "form-control" %>
  </div>
  <p></p>
  <div>
  <%= f.label :Image %><br>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %> 
  </div>
  <p></p>
  <div>
  <%= f.label :Introduction %><br>
  <%= f.text_area :introduction, autofocus: true, class: "form-control"  %>
  </div>
  <p></p>
  <div class="actions">
    <%= f.submit "Update User", class: "btn btn-secondary" %>
  </div>
  <p></p>
  <% end %>

    </div>
  </div>
</div>