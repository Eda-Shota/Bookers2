<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <% if @book.errors.any? %>
        <% if @book.errors.count == 1 %>
          <h3><%= @book.errors.count %> error prohibited this obj from being saved:</h3>
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% else %>
          <h3><%= @book.errors.count %> errors prohibited this obj from being saved:
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end  %>
      <% end %>
      <%= form_with model: @book do |f| %>
      
        <div class="form-group">
          <%= f.label :Title %><br>
          <%= f.text_field :title, autofocus: true, class: "form-control" %>
        </div>
      
        <div class="form-group">
          <%= f.label :Opinion %><br>
          <%= f.text_area :body, autofocus: true, class: "form-control"  %>
        </div >
        <div class="form-group">
          <%= f.submit "Update Book", class: "btn btn-success" %>
        </div>
        
      <% end %>
      <%= link_to "Show", book_path(@book.id) %><span> | </span><%= link_to "Back", books_path %>

    </div>
  </div>
</div>